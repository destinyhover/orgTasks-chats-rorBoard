<h1>Задачи по пользователям</h1>
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Исполнитель</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= article.assigned_user&.username || 'Не назначено' %></td>
        <td><%= t("activerecord.attributes.article.status.#{article.status}") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
