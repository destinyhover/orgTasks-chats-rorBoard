<% content_for :title, @article.title %>
	<div class="row mb-4">
		<div class="col-12">
	<h2 class="display-5"><%=@article.title%></h2>
	<p class="lead"><%=@article.text%></p>
	
	
<div class="d-flex gap-2">	<%=link_to "Изменить", edit_article_path(@article), class: "btn btn-dark"%>
	

<%=button_to "Показать все поручения", articles_path, method: :get, class: "btn btn-dark"%></div>
<hr>
<p><h3>Обсуждение:</h3></p>	
<p><%@comment.each do |f| %>
		<i><%=f.author%> said:</i>
		<p><%=f.body%></p>

<%end %>					</p>
<hr>
<p>

<% if user_signed_in? %>
  <%= form_with(model: [@article, @article.comments.build], local: true) do |f| %>
    <%= f.hidden_field :username, value: current_user.username %>
      <p>
   <label> Имя</label><br> <strong><%= current_user.username %></strong>.
  </p>
    <p>
      <%= f.label "Текст", class: "form-label" %>
      <%= f.text_area :body, class: "form-control w-50" %>
    </p>

    <p><%= f.submit "Отправить", class: "btn btn-dark" %></p>
  <% end %>
<% else %>
  <p>Вы должны <%= link_to "войти", new_user_session_path %>, чтобы оставить комментарий.</p>
<% end %>
</div>
</div>
